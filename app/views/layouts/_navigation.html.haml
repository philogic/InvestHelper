.navbar.navbar-default.navbar-static-top
  .container
    = link_to 'Invest Helper', root_path, class: 'navbar-brand'
    - if current_user
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.col-md-6
          %li= link_to 'My Stocks', my_stocks_url
          %li= link_to 'My Profile', edit_user_registration_path(current_user)
          %li= link_to "Link 3", "/path3"
        %ul.nav.navbar-right.col-md-4
          %li.col-md-8.user-name.text-right
            %i.fa.fa-user
            = current_user.name
          %li.col-md-4.logout
            = link_to 'Log Out', destroy_user_session_path, class: 'btn btn-xs btn-danger', method: :delete