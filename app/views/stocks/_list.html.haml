%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Symbol
      %th Price
      - if current_user
        %th Actions
  %tbody
    - @user_stocks.each do |user_stock|
      %tr
        %td
          = user_stock.name
        %td
          = user_stock.ticker
        %td
          = user_stock.last_price
        - if current_user
          %td
            = link_to 'Delete', user_stock_path(user_stock),
                              method: :delete, data: { confirm: 'Are you sure?' },
                              class: 'btn btn-xs btn-danger'
